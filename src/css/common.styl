/* function */
pxrem($px){
    // designed in iphone6 mode
    return $px / 37.5 * 1rem;
}

/* mixin */
font-dpr($size){
    font-size: $size * 1px
    [data-dpr="2"] & {
        font-size: $size * 2px
    }
    [data-dpr="3"] & {
        font-size: $size * 3px
    }
}

text-overflow($row){
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
mutiple-text-overflow(){
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space:normal;
}

/** end function */
 
body 
    font-family: "Microsoft YaHei", Arial, Helvetica, sans-serif


.box 
    width 10rem
    font-dpr(14)
    mutiple-text-overflow(2)

.icon-arrow 
    width pxrem(64)
    height pxrem(64)
    background url(../images/img_03.png) no-repeat center center
    background-size pxrem(48) pxrem(48)

